<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1 class = "col-6 offset-0">Login</h1>
            <form action="/login" method = "post" class="needs-validation" novalidate>
                <div class = "mb-3">
            <label for="username" class = "form-label">Username</label>
            <input name = "username"
            id="username"
            type="text" 
            placeholder = "Add your Username"
            class = "form-control" 
            required/>
        </div>
        
        <div class = "mb-3">
            <label for="password" class = "form-label">Password</label>
            <input name = "password"
            id="password"
            type="password" 
            placeholder = "Enter Your Password"
            class = "form-control" 
            required/>
        </div>
        <button class = "btn btn-success mt-3 col-6 offset-3">Login</button>
            </form>
            </div>
            </div>